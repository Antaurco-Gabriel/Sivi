extends ../../../layouts/platform/main

block head
  link( rel='stylesheet', href='/views/users-module/admin/companies-register/companies-register.css' )
  link( rel='stylesheet', href='/public/css/loader.css' )
  script(src="https://unpkg.com/vue@next")

block content

  section.table-section(id="company" data-company=company)
    .body-profile
      .title-component.px-2
        .title-component__title Registrar Empresa
        .title-component__line
      .row.body-component.px-4
        form.col-md-10.px-4(method="POST")
          .row.justify-content-start.my-3
            .col-md-6
              .row.p-3
                label.mb-2.custom-label(for='name') Raz√≥n Social:
                input#name.mb-2.form-control(type='text', placeholder='' name="name" required)
            .col-md-6
              .row.p-3
                label.mb-2.custom-label(for='ruc') RUC:
                input#ruc.mb-2.form-control(type='text', placeholder='' name="ruc" oninput="this.value=this.value.replace(/[^0-9]/g,'');" maxlength="11" pattern="(10|20)[0-9]{9}" required title="El RUC debe contener 11 digitos")
          .row.justify-content-center.my-3
            .buttons-component.my-1
              a.custom-button.buttons-component__button.custom-button--return(href='/admin/modulo-usuarios/') Volver
            .buttons-component.my-1
              button.custom-button.buttons-component__button(type='submit') Registrar

//- block scripts
  script(defer src="/views/users-module/admin/companies-register/companies-register.vue.js")