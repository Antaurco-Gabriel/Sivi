doctype html
html
  head
    meta( charset='utf-8' )
    meta( http-equiv='X-UA-Compatible', content='IE=edge' )
    meta( name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' )
    block meta

    title #{title || 'Sivi Business'} 

    link( rel='shorcut icon', href='/public/images/idotipo-full.png' )
    link( rel='stylesheet', href='/public/css/normalize.min.css' )
    link( rel='stylesheet', href='/public/css/globals.css' )
    link(rel='stylesheet' href='/public/css/fontawesome-all.css')
    link( rel='stylesheet', href='/public/css/bootstrap-grid.min.css' )
    link(rel="stylesheet", href='/public/css/plugins/sweetalert2.min.css')
    link( rel='stylesheet', href='/views/layouts/platform/main.css' )
    link( rel='stylesheet', href='/public/css/loader.css' )

    block head

    block scripts
  body.layout-platform
    include ../../components/header/header
    include ../../components/flash/flash
    .header
      +header()
        if user
          if user.type === 0
            a(href="/admin/panel") Panel de Administrador
            a(href='/salir') Cerrar sesión
          if user.type === 1
            a(href="/user/panel") Panel de Usuario
            a(href='/salir') Cerrar sesión
        //- else
          a(href='/ingresar') Iniciar sesión
    .content
      block content
    .footer
      include ../../components/footer/footer

    script(src="//cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js")
    //axios
    script(type="text/javascript" src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.2/axios.min.js')