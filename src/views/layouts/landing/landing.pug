doctype html
html
  head
    meta( charset='utf-8' )
    meta( http-equiv='X-UA-Compatible', content='IE=edge' )
    meta( name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' )
    block meta

    title #{title || 'Sivi Business'} 

    link( rel='shorcut icon', href='/public/images/idotipo-full.png' )
    link( rel='stylesheet', href='/public/css/normalize.min.css' )
    link(rel='stylesheet' href='/public/css/fontawesome-all.css')
    link( rel='stylesheet', href='/public/css/globals.css' )
    link( rel='stylesheet', href='/public/css/bootstrap-grid.min.css' )
    link( rel='stylesheet', href='/views/layouts/landing/landing.css' )
    block head

    block scripts

  body.container-landing
    include ../../components/header/header
    include ../../components/flash/flash
    .header
      +header()
        if user
          if user.type === 0
            a(href="/admin/panel") Panel
            a(href='/salir') Cerrar sesión
          if user.type === 1
            a(href="/user/panel") Panel
            a(href='/salir') Cerrar sesión
        //- else
          a(href='/ingresar') Iniciar sesión
    .content 
      block content

    .footer 
      include ../../components/footer/footer
